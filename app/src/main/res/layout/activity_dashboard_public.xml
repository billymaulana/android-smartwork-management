<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuPublic.DashboardPublicActivity">

    <LinearLayout
        android:id="@+id/linear_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SmartWork"
            android:textStyle="bold"
            android:textColor="#3F414E"
            android:textSize="18dp"/>
         <ImageView
             android:id="@+id/logout"
             android:layout_alignParentRight="true"
             android:layout_marginTop="20dp"
             android:layout_marginRight="20dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/logout"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txWaktu"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Your"
            android:textColor="#3F414E"
            android:textSize="28dp"
            android:layout_marginLeft="20dp"
            android:textStyle="italic"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dream Jobs!"
            android:textColor="#3F414E"
            android:textSize="26dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linear_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/marketing"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            android:background="@drawable/ic_info_marketing">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/salesman"
            android:layout_margin="10dp"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            android:background="@drawable/ic_info_salesman">
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/ispo"
            android:layout_margin="10dp"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            android:background="@drawable/ic_ispo">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bdng"
            android:layout_margin="10dp"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            android:background="@drawable/ic_bndg">
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>